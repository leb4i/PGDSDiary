@model GradingSystem.Models.Class
@{
    ViewData["Title"] = "Редактирай клас";
}

<div class="page-header">
    <div>
        <h1>Редактирай клас</h1>
        <p>Промени данните на класа</p>
    </div>
    <a asp-action="Index" class="btn btn-outline">
        <i class="fas fa-arrow-left"></i> Назад
    </a>
</div>

<div class="card" style="max-width:500px;">
    <div class="card-title">
        <i class="fas fa-chalkboard" style="color:var(--accent);"></i>
        Данни за класа
    </div>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom:12px;"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label class="form-label">Наименование</label>
            <input asp-for="Name" class="form-control" placeholder="Пример: 10А" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div style="display:flex;gap:10px;margin-top:20px;">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-floppy-disk"></i> Запази
            </button>
            <a asp-action="Index" class="btn btn-outline">Откажи</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}