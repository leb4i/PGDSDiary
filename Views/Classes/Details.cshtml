@model GradingSystem.Models.Class
@{
    ViewData["Title"] = "Детайли за клас";
    var specializations = new Dictionary<string, string>
    {
        { "А", "Системно Програмиране" },
        { "Б", "Строителство и Архитектура" },
        { "В", "Мебелно Производство" },
        { "Г", "Интериорен и Графичен Дизайн" },
        { "Д", "Геодезия и Горско стопанство" },
    };
    var letter = Model.Name.Last().ToString();
    var spec = specializations.ContainsKey(letter) ? specializations[letter] : "—";
}

<div class="page-header">
    <div>
        <h1>Детайли за клас</h1>
        <p>Преглед на информацията</p>
    </div>
    <a asp-action="Index" class="btn btn-outline">
        <i class="fas fa-arrow-left"></i> Назад
    </a>
</div>

<div class="card" style="max-width:500px;">
    <div class="card-title">
        <i class="fas fa-chalkboard" style="color:var(--accent);"></i>
        Данни за класа
    </div>

    <div style="display:flex;flex-direction:column;gap:14px;margin-bottom:24px;">
        <div style="display:flex;gap:12px;align-items:center;">
            <span style="font-weight:700;color:var(--text-muted);min-width:120px;">Клас:</span>
            <span class="badge badge-green">@Model.Name</span>
        </div>
        <div style="display:flex;gap:12px;align-items:center;">
            <span style="font-weight:700;color:var(--text-muted);min-width:120px;">Специалност:</span>
            <span style="font-weight:600;">@spec</span>
        </div>
    </div>

    <div style="display:flex;gap:10px;border-top:1px solid var(--border);padding-top:16px;">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
            <i class="fas fa-pen"></i> Редактирай
        </a>
        <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger">
            <i class="fas fa-trash"></i> Изтрий
        </a>
        <a asp-action="Index" class="btn btn-outline">Назад</a>
    </div>
</div>