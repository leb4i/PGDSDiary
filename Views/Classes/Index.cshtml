@model IEnumerable<GradingSystem.Models.Class>
@{
    ViewData["Title"] = "Класове";
    var specializations = new Dictionary<string, string>
    {
        { "А", "Системно Програмиране" },
        { "Б", "Строителство и Архитектура" },
        { "В", "Мебелно Производство" },
        { "Г", "Интериорен и Графичен Дизайн" },
        { "Д", "Геодезия и Горско стопанство" },
    };
}

<div class="page-header">
    <div>
        <h1>Класове</h1>
        <p>Всички класове в системата</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Нов клас
    </a>
</div>

<div class="table-wrapper">
    <table>
        <thead>
            <tr>
                <th>Клас</th>
                <th>Специализация</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var letter = item.Name.Last().ToString();
                var spec = specializations.ContainsKey(letter) ? specializations[letter] : "—";
                <tr>
                    <td><span class="badge badge-green">@item.Name</span></td>
                    <td style="color:var(--text-muted);font-weight:600;">@spec</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline btn-sm">
                            <i class="fas fa-pen"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline btn-sm">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>