@model IEnumerable<GradingSystem.Models.Student>
@{
    ViewData["Title"] = "Ученици";
}

<div class="page-header">
    <div>
        <h1>Ученици</h1>
        <p>Всички ученици в системата</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Нов ученик
    </a>
</div>

<div class="table-wrapper">
    <table>
        <thead>
            <tr>
                <th>Име</th>
                <th>Фамилия</th>
                <th>Клас</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="font-weight:600;">@item.FirstName</td>
                    <td style="font-weight:600;">@item.LastName</td>
                    <td><span class="badge badge-green">@item.Class?.Name</span></td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline btn-sm">
                            <i class="fas fa-pen"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline btn-sm">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>