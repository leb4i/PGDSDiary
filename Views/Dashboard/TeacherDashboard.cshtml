@{
    ViewData["Title"] = "Начало";
}

@if (ViewBag.Error != null)
{
    <div style="color:red;">@ViewBag.Error</div>
}
else
{
    var teacher = ViewBag.Teacher;

    <div class="page-header">
        <div>
            <h1>Добре дошли, @teacher.FirstName @teacher.LastName!</h1>
            <p>Вашето табло с информация за часовете и учениците</p>
        </div>
    </div>

    <!-- STAT КАРТИ -->
    <div class="stat-grid" style="grid-template-columns: repeat(3, 1fr); max-width: 780px;">

        <div class="stat-card-new">
            <div class="stat-card-icon" style="background:#eef3fd;color:#2e6be6;">
                <i class="fas fa-chalkboard"></i>
            </div>
            <div class="stat-card-body">
                <div class="stat-card-value">@(((IEnumerable<dynamic>)ViewBag.MyClassSubjects).Select(cs => cs.ClassId).Distinct().Count())</div>
                <div class="stat-card-label">Класове</div>
                <div class="stat-card-sub">преподавате в тях</div>
            </div>
        </div>

        <div class="stat-card-new">
            <div class="stat-card-icon" style="background:#e8f5ee;color:#2e7d50;">
                <i class="fas fa-user-graduate"></i>
            </div>
            <div class="stat-card-body">
                <div class="stat-card-value">@ViewBag.TotalStudents</div>
                <div class="stat-card-label">Ученици</div>
                <div class="stat-card-sub">във вашите класове</div>
            </div>
        </div>

        <div class="stat-card-new">
            <div class="stat-card-icon" style="background:#fef9c3;color:#a16207;">
                <i class="fas fa-star"></i>
            </div>
            <div class="stat-card-body">
                <div class="stat-card-value">@ViewBag.TotalGrades</div>
                <div class="stat-card-label">Оценки</div>
                <div class="stat-card-sub">поставени от вас</div>
            </div>
        </div>

    </div>

    <!-- КЛАСОВЕ + ПОСЛЕДНИ ОЦЕНКИ -->
    <div class="dashboard-grid" style="margin-bottom:20px;">

        <div class="card">
            <div class="card-title">
                <i class="fas fa-chalkboard" style="color:var(--accent);"></i>
                Моите класове и предмети
            </div>
            <table>
                <thead>
                    <tr>
                        <th>Клас</th>
                        <th>Предмет</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cs in ViewBag.MyClassSubjects)
                    {
                        <tr>
                            <td><span class="badge badge-green">@cs.Class?.Name</span></td>
                            <td style="font-weight:600;">@cs.Subject?.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="card">
            <div class="card-title">
                <i class="fas fa-star" style="color:#d97706;"></i>
                Последно поставени оценки
            </div>
            <table>
                <thead>
                    <tr>
                        <th>Ученик</th>
                        <th>Клас</th>
                        <th>Оценка</th>
                        <th>Дата</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var g in ViewBag.RecentGrades)
                    {
                        <tr>
                            <td style="font-weight:600;">@g.Student?.FirstName @g.Student?.LastName</td>
                            <td><span class="badge badge-blue">@g.Student?.Class?.Name</span></td>
                            <td>
                                @{
                                    string bc = g.Value >= 6 ? "grade-6" :
                                    g.Value >= 5 ? "grade-5" :
                                    g.Value >= 4 ? "grade-4" :
                                    g.Value >= 3 ? "grade-3" : "grade-2";
                                }
                                <span class="grade-badge @bc">@g.Value.ToString("F2")</span>
                            </td>
                            <td style="color:var(--text-muted);font-size:12px;">
                                @g.GradedAt.ToString("dd.MM.yyyy")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

    <!-- РАЗПИСАНИЕ -->
    <div class="card">
        <div class="card-title">
            <i class="fas fa-clock" style="color:var(--accent);"></i>
            Моето разписание
        </div>
        <table>
            <thead>
                <tr>
                    <th>Ден</th>
                    <th>Час</th>
                    <th>Предмет</th>
                    <th>Клас</th>
                    <th>Начало</th>
                    <th>Край</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var dayOrder = new[] { "Понеделник", "Вторник", "Сряда", "Четвъртък", "Петък" };
                    var schedule = ((IEnumerable<dynamic>)ViewBag.Schedule)
                    .OrderBy(s => Array.IndexOf(dayOrder, (string)s.DayOfWeek))
                    .ThenBy(s => (int)s.PeriodNumber);
                }
                @foreach (var slot in schedule)
                {
                    <tr>
                        <td style="font-weight:700;">@slot.DayOfWeek</td>
                        <td>
                            <span class="badge badge-gray">@slot.PeriodNumber час</span>
                        </td>
                        <td style="font-weight:600;">@slot.Subject?.Name</td>
                        <td><span class="badge badge-green">@slot.Class?.Name</span></td>
                        <td style="color:var(--text-muted);">@slot.StartTime.ToString("HH:mm")</td>
                        <td style="color:var(--text-muted);">@slot.EndTime.ToString("HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}