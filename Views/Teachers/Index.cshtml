@model IEnumerable<GradingSystem.Models.Teacher>
@{
    ViewData["Title"] = "Учители";
}

<div class="page-header">
    <div>
        <h1>Учители</h1>
        <p>Всички учители в системата</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Нов учител
    </a>
</div>

<div class="table-wrapper">
    <table>
        <thead>
            <tr>
                <th>Име</th>
                <th>Фамилия</th>
                <th>Потребител</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="font-weight:600;">@item.FirstName</td>
                    <td style="font-weight:600;">@item.LastName</td>
                    <td style="color:var(--text-muted);">
                        <i class="fas fa-user" style="font-size:11px;margin-right:5px;"></i>
                        @item.User?.UserName
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline btn-sm">
                            <i class="fas fa-pen"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline btn-sm">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>