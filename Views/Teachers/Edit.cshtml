@model GradingSystem.Models.Teacher
@{
    ViewData["Title"] = "Редактирай учител";
}

<div class="page-header">
    <div>
        <h1>Редактирай учител</h1>
        <p>Промени данните на учителя</p>
    </div>
    <a asp-action="Index" class="btn btn-outline">
        <i class="fas fa-arrow-left"></i> Назад
    </a>
</div>

<div class="card" style="max-width:500px;">
    <div class="card-title">
        <i class="fas fa-chalkboard-user" style="color:var(--accent);"></i>
        Данни за учителя
    </div>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom:12px;"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label class="form-label">Име</label>
            <input asp-for="FirstName" class="form-control" placeholder="Въведи име..." />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label">Фамилия</label>
            <input asp-for="LastName" class="form-control" placeholder="Въведи фамилия..." />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label">Потребител</label>
            <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <div style="display:flex;gap:10px;margin-top:20px;">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-floppy-disk"></i> Запази
            </button>
            <a asp-action="Index" class="btn btn-outline">Откажи</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}