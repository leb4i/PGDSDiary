@model GradingSystem.Models.Teacher
@{
    ViewData["Title"] = "Детайли за учител";
}

<div class="page-header">
    <div>
        <h1>Детайли за учител</h1>
        <p>Преглед на информацията</p>
    </div>
    <a asp-action="Index" class="btn btn-outline">
        <i class="fas fa-arrow-left"></i> Назад
    </a>
</div>

<div class="card" style="max-width:500px;">
    <div class="card-title">
        <i class="fas fa-chalkboard-user" style="color:var(--accent);"></i>
        Данни за учителя
    </div>

    <div style="display:flex;flex-direction:column;gap:14px;margin-bottom:24px;">
        <div style="display:flex;gap:12px;align-items:center;">
            <span style="font-weight:700;color:var(--text-muted);min-width:120px;">Име:</span>
            <span style="font-weight:700;font-size:15px;">@Model.FirstName</span>
        </div>
        <div style="display:flex;gap:12px;align-items:center;">
            <span style="font-weight:700;color:var(--text-muted);min-width:120px;">Фамилия:</span>
            <span style="font-weight:700;font-size:15px;">@Model.LastName</span>
        </div>
        <div style="display:flex;gap:12px;align-items:center;">
            <span style="font-weight:700;color:var(--text-muted);min-width:120px;">Потребител:</span>
            <span style="color:var(--text-muted);">
                <i class="fas fa-user" style="font-size:11px;margin-right:5px;"></i>
                @Model.User?.UserName
            </span>
        </div>
    </div>

    <div style="display:flex;gap:10px;border-top:1px solid var(--border);padding-top:16px;">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
            <i class="fas fa-pen"></i> Редактирай
        </a>
        <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger">
            <i class="fas fa-trash"></i> Изтрий
        </a>
        <a asp-action="Index" class="btn btn-outline">Назад</a>
    </div>
</div>