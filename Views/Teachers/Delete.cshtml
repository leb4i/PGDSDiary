@model GradingSystem.Models.Teacher
@{
    ViewData["Title"] = "Изтрий учител";
}

<div class="page-header">
    <div>
        <h1>Изтрий учител</h1>
        <p>Тази операция е необратима</p>
    </div>
    <a asp-action="Index" class="btn btn-outline">
        <i class="fas fa-arrow-left"></i> Назад
    </a>
</div>

<div class="card" style="max-width:500px;">
    <div class="card-title" style="color:#b91c1c;">
        <i class="fas fa-triangle-exclamation" style="color:#b91c1c;"></i>
        Сигурен ли си?
    </div>

    <div style="background:#fff5f5;border:1px solid #fca5a5;border-radius:8px;padding:16px;margin-bottom:20px;">
        <div style="display:flex;flex-direction:column;gap:8px;">
            <div style="display:flex;gap:12px;align-items:center;">
                <span style="font-weight:700;color:var(--text-muted);min-width:120px;">Име:</span>
                <span style="font-weight:700;">@Model.FirstName @Model.LastName</span>
            </div>
            <div style="display:flex;gap:12px;align-items:center;">
                <span style="font-weight:700;color:var(--text-muted);min-width:120px;">Потребител:</span>
                <span style="color:var(--text-muted);">
                    <i class="fas fa-user" style="font-size:11px;margin-right:5px;"></i>
                    @Model.User?.UserName
                </span>
            </div>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div style="display:flex;gap:10px;">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Изтрий
            </button>
            <a asp-action="Index" class="btn btn-outline">Откажи</a>
        </div>
    </form>
</div>