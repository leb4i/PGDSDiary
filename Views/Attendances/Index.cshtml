@model IEnumerable<GradingSystem.Models.Attendance>

@{
    ViewData["Title"] = "Отсъствия";
}

<div class="page-header">
    <div>
        <h1>Отсъствия</h1>
        <p>Всички записани отсъствия в системата</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Добави отсъствие
    </a>
</div>

<div class="table-wrapper">
    <table>
        <thead>
            <tr>
                <th>Ученик</th>
                <th>Предмет</th>
                <th>Дата</th>
                <th>Статус</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Student?.FirstName @item.Student?.LastName</td>
                    <td>@item.Subject?.Name</td>
                    <td>@item.Date.ToString("dd.MM.yyyy")</td>
                    <td>
                        @{
                            string badgeClass = item.Status switch
                            {
                                "Отсъства" => "badge badge-red",
                                "Закъснял" => "badge badge-yellow",
                                "Извинено" => "badge badge-blue",
                                _ => "badge"
                            };
                        }
                        <span class="@badgeClass">@item.Status</span>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline btn-sm"><i class="fas fa-pen"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger  btn-sm"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>