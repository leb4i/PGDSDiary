<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] — PGDSDiary</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <!-- SIDEBAR -->
    <aside class="sidebar">
        <div class="sidebar-logo">
            <a href="/Dashboard" style="text-decoration:none;color:inherit;display:flex;align-items:center;gap:10px;">
                <img src="~/images/logo.png" alt="Logo" />
                <div class="logo-text">
                    <span class="logo-top">PGDSDiary</span>
                    <span class="logo-sub">Електронен дневник</span>
                </div>
            </a>
        </div>

        <nav>
            <div class="sidebar-section">Начало</div>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")"
               href="/Dashboard">
                <i class="fas fa-house"></i> Начало
            </a>

            @if (User.IsInRole("Admin"))
            {
                <div class="sidebar-section">Училище</div>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Students" ? "active" : "")" href="/Students">
                    <i class="fas fa-user-graduate"></i> Ученици
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Classes" ? "active" : "")" href="/Classes">
                    <i class="fas fa-chalkboard"></i> Класове
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Subjects" ? "active" : "")" href="/Subjects">
                    <i class="fas fa-book"></i> Предмети
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Teachers" ? "active" : "")" href="/Teachers">
                    <i class="fas fa-person-chalkboard"></i> Учители
                </a>
                <div class="sidebar-section">Успех</div>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Grades" ? "active" : "")" href="/Grades">
                    <i class="fas fa-star"></i> Оценки
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Attendances" ? "active" : "")" href="/Attendances">
                    <i class="fas fa-calendar-check"></i> Отсъствия
                </a>
                <div class="sidebar-section">Организация</div>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "ScheduleSlots" ? "active" : "")" href="/ScheduleSlots">
                    <i class="fas fa-clock"></i> Разписание
                </a>
                <div class="sidebar-section">Анализи</div>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Statistics" ? "active" : "")" href="/Statistics">
                    <i class="fas fa-chart-pie"></i> Статистики
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Reports" ? "active" : "")" href="/Reports">
                    <i class="fas fa-file-chart-column"></i> Справки
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Messages" ? "active" : "")" href="/Messages">
                    <i class="fas fa-comments"></i> Съобщения
                </a>
            }
            else if (User.IsInRole("Teacher"))
            {
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Lessons" ? "active" : "")" href="/Lessons">
                    <i class="fas fa-chalkboard-user"></i> Започни час
                </a>
                <div class="sidebar-section">Работа</div>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Grades" ? "active" : "")" href="/Grades">
                    <i class="fas fa-star"></i> Оценки
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Attendances" ? "active" : "")" href="/Attendances">
                    <i class="fas fa-calendar-check"></i> Отсъствия
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "ScheduleSlots" ? "active" : "")" href="/ScheduleSlots">
                    <i class="fas fa-clock"></i> Разписание
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Statistics" ? "active" : "")" href="/Statistics">
                    <i class="fas fa-chart-pie"></i> Статистики
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Reports" ? "active" : "")" href="/Reports">
                    <i class="fas fa-file-chart-column"></i> Справки
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Messages" ? "active" : "")" href="/Messages">
                    <i class="fas fa-comments"></i> Съобщения
                </a>
            }
            else if (User.IsInRole("Student"))
            {
                <div class="sidebar-section">Моето</div>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Grades" ? "active" : "")" href="/Grades">
                    <i class="fas fa-star"></i> Оценки
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Attendances" ? "active" : "")" href="/Attendances">
                    <i class="fas fa-calendar-check"></i> Отсъствия
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "ScheduleSlots" ? "active" : "")" href="/ScheduleSlots">
                    <i class="fas fa-clock"></i> Разписание
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Messages" ? "active" : "")" href="/Messages">
                    <i class="fas fa-comments"></i> Съобщения
                </a>
            }
        </nav>

        <div class="sidebar-footer">
            PGDSDiary © @DateTime.Now.Year
        </div>
    </aside>

    <!-- MAIN -->
    <div class="main-wrapper">
        <header class="topbar">
            <!-- ТЪРСАЧКА -->
            <div class="search-wrapper">
                <div class="search-box">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" id="globalSearch" class="search-input" placeholder="Търси ученик, учител, предмет..." autocomplete="off" />
                </div>
                <div class="search-dropdown" id="searchDropdown"></div>
            </div>

            <div class="topbar-right">
                <div class="topbar-user">
                    <div class="topbar-avatar">
                        @(User.Identity?.Name?.Substring(0, 1).ToUpper() ?? "?")
                    </div>
                </div>
                <form method="post" action="/Account/Logout">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn-logout">
                        <i class="fas fa-right-from-bracket"></i> Изход
                    </button>
                </form>
            </div>
        </header>

        <main class="page-content">
            @RenderBody()
        </main>
    </div>

    <script>
        const searchInput = document.getElementById('globalSearch');
        const dropdown    = document.getElementById('searchDropdown');
        let searchTimer;

        searchInput.addEventListener('input', () => {
            clearTimeout(searchTimer);
            const q = searchInput.value.trim();
            if (q.length < 2) { dropdown.style.display = 'none'; return; }

            searchTimer = setTimeout(async () => {
                const res  = await fetch(`/Search/Live?q=${encodeURIComponent(q)}`);
                const data = await res.json();

                if (!data.total) {
                    dropdown.innerHTML = '<div class="search-empty">Няма резултати</div>';
                    dropdown.style.display = 'block';
                    return;
                }

                let html = '';
                if (data.students?.length) {
                    html += `<div class="search-group-title"><i class="fas fa-user-graduate"></i> Ученици</div>`;
                    data.students.forEach(s => {
                        html += `<a class="search-item" href="/Students/Details/${s.id}">
                            <span class="search-item-name">${s.name}</span>
                            <span class="search-item-sub">${s.className}</span>
                        </a>`;
                    });
                }
                if (data.teachers?.length) {
                    html += `<div class="search-group-title"><i class="fas fa-chalkboard-user"></i> Учители</div>`;
                    data.teachers.forEach(t => {
                        html += `<a class="search-item" href="/Teachers/Details/${t.id}">
                            <span class="search-item-name">${t.name}</span>
                        </a>`;
                    });
                }
                if (data.subjects?.length) {
                    html += `<div class="search-group-title"><i class="fas fa-book"></i> Предмети</div>`;
                    data.subjects.forEach(s => {
                        html += `<a class="search-item" href="/Subjects/Details/${s.id}">
                            <span class="search-item-name">${s.name}</span>
                            <span class="search-item-sub">${s.shortName}</span>
                        </a>`;
                    });
                }

                dropdown.innerHTML = html;
                dropdown.style.display = 'block';
            }, 250);
        });

        document.addEventListener('click', (e) => {
            if (!e.target.closest('.search-wrapper'))
                dropdown.style.display = 'none';
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>